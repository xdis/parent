    <!--根据案件id查询出申请人的代理人和被申请人的代理人-->
    <select id="queryAgentByCaseId" parameterType="string" resultType="com.zyxy.common.vo.CaseAgentVO">
        SELECT
        ui.name name,
        ca.litigant_type litigantType
        FROM
        case_agent ca,
        case_info ci,
        user_info ui
        WHERE
        ca.case_id = ci.id
        AND ca.agent_id = ui.id
        AND
        ci.id=#{caseId};
    </select>



    <!--根据案件id查询出申请人的代理人和被申请人的代理人-->
    <select id="selectAgentByCaseId" parameterType="com.zyxy.common.domain.CaseAgent" resultType="com.zyxy.common.vo.CaseAgentVO">
        SELECT
         <include refid="Base_Column_List" />
        FROM
        case_agent
        WHERE
        CASE_ID=#{caseId}
        <if test="litigantType!=null and litigantType!='' ">
          AND LITIGANT_TYPE=#{litigantType}
        </if>

    </select>
    
    <!-- 查询案件代理人信息 -->
    <select id="selectCaseAgentByCaseId" parameterType="com.zyxy.common.domain.CaseAgent" resultType="com.zyxy.common.vo.CaseAgentVO">
        SELECT
			c.NAME name,
			a.LITIGANT_TYPE litigantType,
			d.vocation vocation
		FROM
			case_agent a
		INNER JOIN user_info c ON c.ID = a.AGENT_ID
		INNER JOIN litigant_info d ON c.id = d.user_id
		INNER JOIN litigant_agent e ON e.litigant_id = d.id
		WHERE
			a.CASE_ID = #{caseId}
		AND a.LITIGANT_TYPE = #{litigantType}
		AND e.STATUS = '0';
    </select>
    
     <!--根据案件id查询出申请人的代理人名称和职务和被申请人的代理人名称和职务-->
    <select id="selectAgentName" parameterType="string" resultType="com.zyxy.common.vo.CaseAgentVO">
        SELECT
        li.name name,
        li.vocation vocation,
        ca.litigant_type litigantType
        FROM
        case_agent ca,
        case_info ci,
        litigant_info li
        
        WHERE
        ca.case_id = ci.id
        AND ca.agent_id = li.user_id
        AND ci.id=#{caseId};
    </select>
    
    <select id="selectAgentInfo" resultType="com.zyxy.common.vo.doc.CaseDocAgentVO">
        SELECT
          f.type type,
       	  f.name name,
          CASE WHEN u.sex = 0 THEN '男' ELSE '女' END sex,
          f.ethnic ethnic,
          f.birthday birthday,
          f.card_id cardId,
          f.address address,
          f.cert_name certName,
          f.cert_duties certDuties,
          f.VOCATION
		FROM
			litigant_info f,
			user_info u
		WHERE
			u.id = #{userId}
		AND f.user_id = u.id
    </select>
    
